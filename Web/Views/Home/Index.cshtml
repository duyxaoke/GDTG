
@{
    ViewData["Title"] = "Tạo giao dịch";
}
<style>
    .main-panel {
        max-width: 1140px;
    }
    .select2-selection__rendered {
        line-height: 20px !important;
    }
    .select2-container .select2-selection--single {
        height: 41px !important;
    }

    .select2-selection__arrow {
        height: 41px !important;
    }
</style>
<div ng-controller="IndexController" ng-cloak>
    <!-- .card -->
    <section class="card">
        <!-- floating action -->
        <!-- /floating action -->
        <!-- .card-body -->
        <div class="card-body">
            <div class="container-fluid d-flex justify-content-between mb-5">
                <div class="col-md-6 pl-0">
                    <h4>@ViewData["Title"].</h4>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>
                        <strong>Bạn là:</strong>
                    </label>
                    <select style="width: 100% !important;height:41px !important">
                        <option>Người bán</option>
                        <option>Người mua</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        <strong>Bạn có:</strong>
                    </label>
                    <select style="width: 100% !important;height:41px !important">
                        <option>Bitcoin (BTC)</option>
                        <option>Ethereum (ETH)</option>
                        <option>Bitcoin Cash (BCH)</option>
                        <option>XRP (XRP)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        <strong>Nhập số lượng:</strong>
                    </label>
                    <input type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label>
                        <strong>Tổng tiền muốn bán:</strong>
                    </label>
                    <input type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label>
                        <strong>Tài khoản nhận tiền (Vietcombank):</strong>
                    </label>
                    <input type="text" class="form-control" value="33300106666">
                </div>
                <div class="form-group">
                    <label>
                        <strong>Chủ tài khoản:</strong>
                    </label>
                    <input type="text" class="form-control" value="TRAN LE KHANH DUY" readonly="readonly">
                </div>
                <button class="btn btn-primary btn-block mt-4">TẠO GIAO DỊCH</button>
            </div>

        </div>
        <!-- /.card-body -->
    </section>
</div>

@section scripts{
    <script>
        $("select").select2();
        var IndexController = ($scope, $rootScope, $timeout, $filter, $compile, ApiHelper, CommonHelper, UtilFactory, DataFactory, $q) => {

        }
        IndexController.$inject = ["$scope", "$rootScope", "$timeout", "$filter", "$compile", "ApiHelper", "CommonHelper", "UtilFactory", "DataFactory", "$q"];
        addController("IndexController", IndexController);
    </script>
}